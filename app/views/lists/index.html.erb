
<h2> All Task Lists </h2>

<% @lists.each  do |list| %>
 <h3><%= link_to list.title, list_path(list) %></h3>
 <ul>
 <% list.tasks.each do |task| %>
 <li>
    <%= link_to task.title, list_task_path(list, task) %> |
    <%= task.status %> |
    <%= task.due_date %> |
    Assigned to: <%= task.user_info ||  link_to('Claim Task', edit_list_task_path(list,task)) %>
</li>
<% end %>
</ul>
<% end %><br>

<%= link_to_if(current_user.admin?, 'Add List', new_list_path) %>

