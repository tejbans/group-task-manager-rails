<% if logged_in? %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= current_user.email %></h1><br>
      <%= link_to "All Task Lists", lists_path %><br><br>
      <%= link_to "My Task Lists", mylists_path %><br><br>
      <%= link_to "My Completed Tasks", mylists_tasks_completed_path %><br><br>
      <%= link_to "My Overdue Tasks",mylists_tasks_overdue_path %>
    </section>
  </aside>
<% end %>


<script type="text/javascript" charset="utf-8">
$(function() {
  $("a[href='/mylists']").on("click", function(e) {
     e.preventDefault();
    
    $.get("/mylists.json", function(data){
      debugger
      var id = data["id"]
      var taskTitle = "<h4>" + data["title"] + "</h4>";
      var taskDescription = "<p> Description: " + "<i>"+ data["description"]+ "</i>" + "</p>";
      var taskStatus = "<p>Status: " + "<i>"+ data["status"] + "</i>" + "</p>";
      var taskDuedate = "<p>Due Date: " + "<i>"+ data["due_date"] + "</i>" + "</p>";
      var taskUser = "<p>Assigned to: " + $("#taskUser-" + id).html() + "</p>";
      var taskSeperator = "<p>----------------------------------</p>";
      
      var taskJ = taskTitle + taskDescription + taskStatus + taskDuedate + taskUser+ taskSeperator;

      $("#task-" + id).html(taskJ);
    });
  });
});
</script>