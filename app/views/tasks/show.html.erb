<h3> <%= @task.title %> in <%= @task.list.title %></h3>
<p>
Description: <%= @task.description %> <br>
Status: <%= @task.status %> <br>
Due Date: <%= @task.due_date %> <br>
Assigned to:  <%= @task.user_info || 'None' %> <br>


<% if current_user.admin? %>
  <%= link_to "Edit" , edit_list_task_path(@list, @task) %> |
  <%= link_to 'Delete', list_task_path(@list,@task), method: :delete, data: { confirm: "You sure?" }%>
  <%else %>
    <%= link_to "Update Status" , edit_list_task_path(@list, @task) %> 
  <%end %> 
