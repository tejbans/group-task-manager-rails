<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= current_user.email %>
      </h1>
    </section>
  </aside>
<div class="col-md-8">
    <% if @user.lists.any? %>
      <ol class="lists">
        <%= render @lists %>
      </ol>
    <% end %>
  </div>
</div>